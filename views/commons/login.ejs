<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= title %></title>
<link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">

<style type="text/css">
	.login-form {
		width: 340px;
    	margin: 50px auto;
	}
    .login-form form {
    	margin-bottom: 15px;
        background: 	#FFE4E1;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .login-form h2 {
        margin: 0 0 15px;
    }
    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }
    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>
</head>
<body style="background-color: #E0FFFF;">
<div class="login-form">
    <form action="/login" method="post" name="frm">
        <h2 class="text-center">Log in</h2>
        <% if(locals.messages.warn){%>
          <div class="alert alert-warning alert-dismissible" role="alert" style="width:100%;">
              <strong>Warning!</strong><br><%=messages.warn%>
          </div>
          <%}%>

          <% if(locals.messages.success){%>
            <div class="alert alert-success alert-dismissible" role="alert" style="width:100%;">
                <strong>Success!</strong><br><%=messages.success%>
            </div>
            <%}%>
        <div class="form-group">
            <input type="text" id="email" class="form-control" placeholder="ID" required="required">
        </div>
        <div class="form-group">
            <input type="password" id="password" class="form-control" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox" id="rememberme"> Remember me</label>
            <!-- <a href="#" class="pull-right">Forgot Password?</a> -->
        </div>
    </form>
    <!-- <p class="text-center"><a href="#">Create an Account</a></p> -->
</div>
</body>
<script src="/vendor/vendors/jquery/dist/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="/javascripts/js.cookie.js" charset="utf-8"></script>
<script type="text/javascript">
$(function(){
  frm.onsubmit = function(){
    console.log('submit');
    if(frm.rememberme.checked){
      console.log('checked');
    Cookies.set('email', frm.email.value, { expires: 7 });
    }else{
      Cookies.remove("email");
    }
  }
  if(Cookies.get("email")){
    frm.email.value = Cookies.get("email");
    frm.rememberme.checked = true;
  }
});

</script>
</html>
