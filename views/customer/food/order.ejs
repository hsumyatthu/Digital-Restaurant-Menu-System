<!DOCTYPE html>
<html lang="en">
<% include ../../partial/head.ejs %>
<body class="animsition">
	<style media="screen">
		th {
				background-color: #9370DB;
				color: white;
			}
	</style>
	<!-- Header -->
	<% include ../../partial/header3.ejs %>

	<!-- Cart -->
	<form >
		<section class="cart bgwhite p-t-70 p-b-100">
			<center><h5><b>Order List</b></h5></center><br>
			<div class="container">
				<!-- Cart item -->
				<div class="container-table-cart pos-relative">
					<div class="wrap-table-shopping-cart bgwhite">
						<table class="table table-bordered">
							<thead>
								<tr class="table-head ">
									<th class="column-1 text-center">Food Photo</th>
									<th class="column-2 text-center">Food Name</th>
									<th class="column-3 text-center">Price</th>
									<th class="column-4 p-l-70 text-center">Count</th>
									<th class="column-5 text-center">Total</th>
								</tr>
							</thead>
							<tbody>
								<% for(var i= 0;i< order.foods.length;i++){%>
									<tr class="table-row">
										<td class="column-1">
											<center><div class="cart-img-product b-rad-4 o-f-hidden">
												<img src="<%=order.foods[i].food_id.imgUrl%>" alt="IMG-PRODUCT">
											</div></center>
										</td>
										<td class="column-2 text-center"><%=order.foods[i].food_id.fname%></td>
										<td class="column-3 text-center"><%=order.foods[i].food_id.price%></td>
										<td class="column-4 text-center">
											<%=order.foods[i].count%>
										</td>
										<td class="column-5 text-center"><%=order.foods[i].price%></td>
									</tr>
								<%}%>
							</tbody>
							<tfoot>
								<tr class="table-foot">
									<td class="column-10 text-center" colspan="4"><b>Total</b></td>
									<td class="column-11 text-center"><%=order.tolprice%></td>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>

				<div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
					<div class="size10 trans-0-4 m-t-10 m-b-10">
						<!-- Button -->
						<button id="checkOut" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
							Checkout
						</button>
					</div>
				</div>
			</div>
		</section>
	</form>
	<!-- Footer -->
<% include ../../partial/footer.ejs %>
	<!-- Back to top -->
	<div class="btn-back-to-top bg0-hov" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="fa fa-angle-double-up" aria-hidden="true"></i>
		</span>
	</div>

	<!-- Container Selection -->
	<div id="dropDownSelect1"></div>
	<div id="dropDownSelect2"></div>

<!--===============================================================================================-->
	<script type="text/javascript" src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="/vendor/bootstrap/js/popper.js"></script>
	<script type="text/javascript" src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script type="text/javascript" src="/vendor/select2/select2.min.js"></script>
	<script type="text/javascript" src="/vendor/sweetalert/sweetalert.min.js"></script>
	<script type="text/javascript">
		$("#checkOut").click(function () {
			// swal({
			// 	title: "Well Done",
			// 	text:" is successfully Add!!!",
			// 	type: "success",
			// 	confirmButtonText: "OK",
			// 	closeOnConfirm: true
			// },
			// function (isConfirm) {
				$.post(
					'customer/checkout/<%=order._id%>'
				).done(function (res) {
					location.href = "/customer/home"
				});
			// }
			// );

			console.log("<%= order._id%>");
		});
		$(".selection-1").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect1')
		});

		$(".selection-2").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect2')
		});
	</script>
<!--===============================================================================================-->
	<script src="/javascripts/main.js"></script>

</body>
</html>
