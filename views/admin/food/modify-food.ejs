  <script type="text/javascript">
  // jQuery.noConflict();
  $(function() {
    $.fn.cropper.noConflict();
    $('[data-toggle="tooltip"]').tooltip();
    var $modal = $('#exampleModal');
    var uploadImg = document.getElementById('uploadImg'); // upload file
    uploadImg.addEventListener('change', function (e) {
        var files = e.target.files;
        var done = function (url) {
          uploadImg.value = '';
          $('#sourceImg').attr('src', url);
          $modal.modal('show');
        };
        var reader;
        var file;
        var url;
        if (files && files.length > 0) {
          file = files[0];
          if (URL) {
            done(URL.createObjectURL(file));
          } else if (FileReader) {
            reader = new FileReader();
            reader.onload = function (e) {
              done(reader.result);
            };
            reader.readAsDataURL(file);
          }
        }
    });
    console.log($modal);
    var cropper;
    var canvas;
    var sourceImg = document.getElementById('sourceImg');
    $modal.on('shown.bs.modal', function () {
      cropper = new Cropper(sourceImg, {
          aspectRatio: 2 / 3,
          preview: '.img-preview',
          viewMode: 1,
      });
    }).on('hidden.bs.modal', function () {
      cropper.destroy();
      cropper = null;
    });

    $('#crop').click( function () {
      $modal.modal('hide');
      if (cropper) {
        canvas = cropper.getCroppedCanvas({
          width: 720,
          height: 960,
        });
        $('#photo').attr('src', canvas.toDataURL() ); // change cropped image
      }
    });
    $('#save').click(function(){
      console.log('click');
      var data = {fname: $('#fname').val()};
      if(data.fname == ''){
        alert('Please add category!');
        return;
    }
      $.ajax({url: "/admin/duplicatefname", data:data, type:'POST', success: function(result){
        if(result.status == false){
          alert(result.msg);
          $('#fname').val('');
          $('#fname').focus();
        }else {
          canvas.toBlob(function (blob) {
              var formData = new FormData(document.querySelector('form'));
              formData.append('photo', blob);
              $.ajax('/admin/modify', {
                method: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (rtn) {
                    console.log(rtn);
                    if(rtn.status) location.href = "/admin/detail/"+rtn.id;
                },
                error: function (err) {
                    console.log(err);
                },
                complete: function () {
                    console.log('complate');
                },
              });
            });
          }
      }});
    });
  });

  </script>
