<script type="text/javascript">
  $(function (){
    if(Cookies.get("table_cookie")){

      $('#tbname').html(JSON.parse(Cookies.get("table_cookie").substring(2)).name);
        $('#tname').html(JSON.parse(Cookies.get("table_cookie").substring(2)).name);
    }
    if(Cookies.get('cart')){
      $('#cartNo').html(JSON.parse(Cookies.get('cart').substring(2)).items.length);
      $('#orderm').html(JSON.parse(Cookies.get('cart').substring(2)).items.length);
    }else{
      $('#cartNo').html(0);
      $('#orderm').html(0);
    }

    var data = "";
    var total = 0;
    var item = JSON.parse(Cookies.get('cart').substring(2)).items;
    for (var i = 0; i < item.length; i++) {
      data += "<li class='header-cart-item' ><div class='header-cart-item-img'>\<img src='/images/item-cart-01.jpg' alt='IMG'></div><div class='header-cart-item-txt' ><a href='/customer/cart' class='header-cart-item-name'>"+item[i].name+"</a><span class='header-cart-item-info'>"+item[i].price+" </span></div></li>"
      total += Number(item[i].price);
    }
    document.getElementById('order').innerHTML = data;
    $('#tolprc').html(total);
  });
</script>
